@model IEnumerable<Vidly.Models.Movie>

@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<a class="btn btn-primary" href="/Movie/Create/">Create New</a>

<table id="movies" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movie</th>
			<th>Genre</th>
			<th>Stock Total</th>
			<th>Stock Available</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

@section scripts
{
	<script>
		$(document).ready(function()
		{
			var table = $("#movies").DataTable(
			{
				ajax :
				{
					url     : "/api/movies",
					dataSrc : ""
				},
				columns :
				[
					{
						data   : "name",
						render : function (data, type, movie)
						{
							return "<a href='/Movie/Edit/" + movie.id + "'>" + movie.name + "</a>";
						}
					},
					{
						data   : "genre.name"
					},
					{
						data   : "stockQuantity"
					},
					{
						data   : "stockAvailable"
					},
					{
						data   : "id",
						render : function (data)
						{
							return "<button class='btn-link js-delete' data-movie-id='" + data + "'>Delete</button>";
						}
					}
				]
			});

			$("#movies").on("click", ".js-delete", function ()
			{
				var $this = $(this);

				bootbox.confirm("Are you sure you want to delete this Movie?", function(result)
				{
					if (result)
					{
						$.ajax(
						{
							url     : "/api/movies/" + $this.attr("data-movie-id"),
							method  : "DELETE",
							success : function(result)
							{
								if (result)
								{
									table.row($this.closest("tr")).remove().draw();
								}
								else
								{
									bootbox.alert("Unable to delete this Movie - are there outstanding rentals?");
								}
							}
						});
					}
				});
			});
		});
	</script>
}